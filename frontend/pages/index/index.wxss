/* pages/index/index.wxss */

.body {
  background-color: white;
  display: flex;
}

#dishes_view {
  background-color: black;
  height: 100%;
  width: 78%;
}

#cart_view {
  display: inline-block;
  position: fixed;
  width: 80%;
  left: 10%;
  bottom: 100rpx;
  height: 100rpx;
  background-color: #696969;
  padding: 10rpx;
}

#total_text {
  margin-top: 20rpx;
  font-size: larger;
  color: white;
}

.num_control > van-button {
  display: inline;
}

.num_control > view {
  display: inline;
  font-size: medium;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

#overlay_view {
  background-color: white;
  width: 90%;
  height: 60%;
}

#overlay_top {
  width: 100%;
  height: 20%;
  padding-top: 20rpx;
}

#overlay_top > view:first-child {
  padding-left: 20rpx;
}

#overlay_scroll {
  display: flex;
  flex-direction: column;
  padding-bottom: 50rpx;
  width: 100%;
  height: 80%;
}

.cart_item {
  height: 100rpx;
  padding-left: 20rpx;
}
